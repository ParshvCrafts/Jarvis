# =============================================================================
# JARVIS Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (FREE TIERS ONLY)
# -----------------------------------------------------------------------------
# Groq API Key (Primary - fastest, 14,400 req/day free)
# Get from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Google AI Studio API Key (Gemini - complex reasoning, 1,500 req/day free)
# Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Base URL (Local offline LLM - completely free)
# Install from https://ollama.ai/
OLLAMA_BASE_URL=http://localhost:11434

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
# Telegram Bot Token - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram User ID (for authentication)
TELEGRAM_USER_ID=your_telegram_user_id_here

# -----------------------------------------------------------------------------
# IoT Security
# -----------------------------------------------------------------------------
# Shared secret for ESP32 device authentication
IOT_SHARED_SECRET=generate_a_strong_random_secret_here

# -----------------------------------------------------------------------------
# Email (Optional)
# -----------------------------------------------------------------------------
# Gmail App Password - Generate from Google Account settings
GMAIL_APP_PASSWORD=your_gmail_app_password_here
GMAIL_ADDRESS=your_email@gmail.com

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# JWT Secret for session tokens (legacy auth)
JWT_SECRET=generate_a_strong_jwt_secret_here

# Encryption key for sensitive data (32 bytes, base64 encoded)
ENCRYPTION_KEY=generate_a_32_byte_base64_key_here

# -----------------------------------------------------------------------------
# Mobile API Security (Phase 6)
# -----------------------------------------------------------------------------
# Admin credentials for Mobile API (defaults: admin/jarvis)
JARVIS_ADMIN_USER=admin
JARVIS_ADMIN_PASSWORD=change_this_secure_password

# JWT secret for Mobile API tokens (auto-generated if not set)
JARVIS_JWT_SECRET=generate_a_strong_jwt_secret_for_mobile_api

# -----------------------------------------------------------------------------
# Push Notifications (ntfy.sh)
# -----------------------------------------------------------------------------
# ntfy.sh server URL (default: https://ntfy.sh)
NTFY_SERVER_URL=https://ntfy.sh

# Base topic prefix for user notifications
NTFY_TOPIC_PREFIX=jarvis_

# -----------------------------------------------------------------------------
# IoT Device IPs (Optional)
# -----------------------------------------------------------------------------
LIGHT_DEVICE_IP=192.168.1.100
DOOR_DEVICE_IP=192.168.1.101

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
CACHE_ENABLED=true
STREAMING_ENABLED=true
DASHBOARD_ENABLED=false
DASHBOARD_PORT=8080
API_PORT=8000

# -----------------------------------------------------------------------------
# Optional Services
# -----------------------------------------------------------------------------
# Weather API Key (OpenWeatherMap) - Get from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Calendar API (Google Calendar)
GOOGLE_CALENDAR_CREDENTIALS_PATH=path_to_credentials.json

# -----------------------------------------------------------------------------
# Academic Features (UC Berkeley Student)
# -----------------------------------------------------------------------------
# Canvas LMS API Token (UC Berkeley bCourses)
# Generate from: Canvas Settings > Account > Approved Integrations > New Access Token
CANVAS_API_TOKEN=your_canvas_api_token_here

# GitHub Personal Access Token
# Generate from: GitHub Settings > Developer Settings > Personal Access Tokens
GITHUB_TOKEN=your_github_token_here

# -----------------------------------------------------------------------------
# Research & Paper Writing (Phase 6)
# -----------------------------------------------------------------------------
# CORE API Key (Optional - for additional academic sources)
# Get from: https://core.ac.uk/services/api
CORE_API_KEY=your_core_api_key_here

# Tavily API Key (Optional - for web research)
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Mistral API Key (Optional - alternative LLM)
# Get from: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenRouter API Key (Optional - access to many models)
# Get from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Notion API Key (Optional - for note integration)
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here

# -----------------------------------------------------------------------------
# Scholarship Automation (Phase 6)
# -----------------------------------------------------------------------------
# Supabase URL and Key (Optional - for RAG vector storage)
# Get from: https://supabase.com/ - Project Settings > API
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Serper API Key (Optional - for Google search)
# Get from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# Cohere API Key (Optional - for embeddings)
# Get from: https://cohere.ai/
COHERE_API_KEY=your_cohere_api_key_here

# -----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/jarvis.log-
